<idea-plugin>
    <id>org.jetbrains.research.commentupdater</id>
    <name>CommentUpdater</name>
    <vendor>url="https://research.jetbrains.org/">JetBrains Research</vendor>

    <description><![CDATA[
     Detects outdated comments in Java code and suggests updates for them.
    ]]>
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="JAVA"
                         displayName="The comment is outdated"
                         groupName="Comment inconsistency"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.commentupdater.inspection.CodeCommentInspection"/>
    </extensions>
</idea-plugin>